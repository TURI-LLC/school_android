<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment"
    android:background="#f6f6f6">
    <!--        页头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal"
        android:gravity="bottom">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/main_left_head"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="15dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_head_txtbg">
            <ImageView
                android:id="@+id/search_pic"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/main_head_search"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/search_pic"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:minLines="1"
                android:padding="0dp"
                android:textColor="#333"
                style="?android:attr/textViewStyle"
                android:background="@null" />
        </RelativeLayout>
        <ImageView
            android:layout_width="19dp"
            android:layout_height="15dp"
            android:src="@drawable/main_news"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63dp">
            <!--        轮播图-->
            <RelativeLayout
                android:id="@+id/banner"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">
            </RelativeLayout >
            <!--        主要功能-->
            <LinearLayout
                android:id="@+id/main_function"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_below="@+id/banner"
                android:background="@drawable/card"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="11dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/erketang"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/zhiyuan"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />
                    <ImageButton
                        android:id="@+id/kechengbiao"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/kebiao"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/qingjia"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal" >
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/huodong"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/chengji"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/daka"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginRight="18dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/quanbu"
                        android:scaleType="fitCenter"
                        android:background="#fff"
                        />
                </LinearLayout>
            </LinearLayout>
            <!--        校园头条-->
            <LinearLayout
                android:id="@+id/campus_headlines"
                android:layout_below="@+id/main_function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="#fff"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <!--            校园头条标题-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/search"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    >
                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/main_schooltitle_bg"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="校园头条"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="12dp"
                        android:text="更多消息"
                        android:textSize="11dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="31dp"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:background="@drawable/more_ico"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <!--            校园头条内容-->
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/recycler_view"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <!--        页脚-->
            <LinearLayout
                android:layout_below="@+id/campus_headlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="#eee"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我也是有底线的"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ccc"
                    android:layout_marginRight="20dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="#eee"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
