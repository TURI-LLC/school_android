<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/quanzi3_touxiang"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/anonymous"/>
                    <TextView
                        android:id="@+id/quanzi3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="我叫啥"
                        android:textColor="#333"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/quanzi3_touxiang"
                        android:layout_centerVertical="true"
                        />
            <TextView
                android:id="@+id/quanzi3_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="￥300/小时"
                android:textColor="#FF4500"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/quanzi3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
            android:textColor="#232323"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/quanzi3_img1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:src="@drawable/anonymous"/>
            <ImageView
                android:id="@+id/quanzi3_img2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:src="@drawable/forward"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <ImageView
                android:id="@+id/quanzi3_img3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:src="@drawable/email"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <Button
                android:id="@+id/quanzi3_lianxi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="联  系"
                android:textSize="25dp"
                android:background="@drawable/button_blue"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />
            <Button
                android:id="@+id/quanzi3_shenqing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="申  请"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_orange"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

